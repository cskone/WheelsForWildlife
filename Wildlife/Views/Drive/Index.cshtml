@model IEnumerable<Wildlife.Models.DriveInfoViewModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

@if (ViewBag.displayMenu == "Admin")
{
    using (Html.BeginForm())
    {
        <h4>Find by City, Assigned Driver Email, House Number and Street:</h4>
        <p class="form-inline">
            @Html.TextBox("SearchString", "", new { @class = "form-control" })
            <input type="submit" value="Search" class="btn btn-default" />
            @Html.ActionLink("Create New", "Create", null, htmlAttributes: new { @class = "btn btn-default", @style = "float:right;margin-bottom:20px" })
        </p>
    }
}
<div class="card-columns">
    @foreach (var item in Model)
    {
        <div class="card text-center fa-border">
            <div class="card-body">
                <h5 class="card-title bg-primary">@Html.DisplayFor(modelItem => item.DriveName)</h5>
                <p class="card-text text-muted">Driver: @Html.DisplayFor(modelItem => item.DriverId)</p>
                <p class="card-text">@Html.DisplayFor(modelItem => item.ExtraDetails)</p>
                <p class="card-text">
                    <small class="text-muted">
                        Pickup: @Html.DisplayFor(modelItem => item.StartAddressLine1), @Html.DisplayFor(modelItem => item.StartCity)
                    </small>
                </p>
                <p class="card-text">
                    <small class="text-muted">
                        Dropoff: @Html.DisplayFor(modelItem => item.EndAddressLine1), @Html.DisplayFor(modelItem => item.EndCity)
                    </small>
                </p>
                <p class="card-text">
                    <small class="text-muted">
                        Distance: @Html.DisplayFor(modelItem => item.DriveDistance) miles
                    </small>
                </p>
                <p class="card-text">
                    <small class="text-muted">
                        Travel Time: @Html.DisplayFor(modelItem => item.DriveDuration) mins
                    </small>
                </p>
                @Html.ActionLink("Edit", "Edit", "drive", new { id = item.DriveId }, htmlAttributes: new { @class = "btn btn-primary btn-sm" }) |
                @Html.ActionLink("Details", "Details", "drive", new { id = item.DriveId }, htmlAttributes: new { @class = "btn btn-primary btn-sm" }) |
                @Html.ActionLink("Delete", "Delete", "drive", new { id = item.DriveId }, htmlAttributes: new { @class = "btn btn-danger btn-sm" })
            </div>
        </div>
    }
</div>
